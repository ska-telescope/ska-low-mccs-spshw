{
    "name": "ska-low-mccs-spshw devcontainer",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash"
                    }
                },
                "terminal.integration.defaultProfile.linux": "bash",
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": true
                },
                "python.pythonPath": "/usr/bin/python3",
                "python.testing.pytestEnabled": true,
                "pylint.path": [
                    "/usr/local/bin/pylint"
                ],
                "[python]": {
                    "editor.defaultFormatter": "ms-python.black-formatter"
                },
                "isort.args": [
                    "--profile",
                    "black"
                ],
                "coverage-gutters.manualCoverageFilePaths": [
                    "/workspaces/ska-low-mccs-spshw/build/reports/code-coverage.xml"
                ],
                "coverage-gutters.showLineCoverage": true
            },
            "extensions": [
                "ms-python.python",
                "ms-python.pylint",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.isort",
                "matangover.mypy",
                "lextudio.restructuredtext",
                "trond-snekvik.simple-rst",
                "davidanson.vscode-markdownlint",
                "alexkrechik.cucumberautocomplete",
                "ryanluker.vscode-coverage-gutters"
            ]
        }
    },
    "postCreateCommand": "sudo poetry config virtualenvs.create false && sudo poetry install",
    "remoteUser": "tango",
    "remoteEnv": {
        "PATH": "/home/tango/.local/bin:${containerEnv:PATH}",
    }
}
