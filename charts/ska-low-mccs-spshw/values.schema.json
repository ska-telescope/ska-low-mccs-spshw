{
  "$schema": "http://json-schema.org/schema#",
  "$comment": "schema for ska-low-mccs-spshw chart values file",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "registry": {
          "$comment": "registry is a URI, but could be scheme-less",
          "type": "string",
          "pattern": "^(https?://)?[a-z0-9-.]+(/[a-z0-9-_/.]+)?$"
        },
        "tag": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string",
              "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)((-dev\\.c[0-9a-f]{8})|(-dirty))?$"
            }
          ],
          "type": [
            "string",
            "null"
          ]
        },
        "pullPolicy": {
          "type": "string",
          "pattern": "^(Always|Never|IfNotPresent)$"
        }
      }
    },
    "simulators": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "daqs": {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "object",
                  "propertyNames": {
                    "$comment": "Slug used to construct server name, k8s pods, etc",
                    "format": "hostname"
                  },
                  "additionalProperties": {
                    "oneOf": [
                      {
                        "type": "null"
                      },
                      {
                        "type": "object",
                        "properties": {
                          "host": {
                            "type": "string",
                            "format": "hostname"
                          },
                          "port": {
                            "type": "integer",
                            "minimum": 1
                          }
                        },
                        "required": [
                          "host",
                          "port"
                        ],
                        "additionalProperties": false
                      }
                    ]
                  }
                }
              ]
            },
            "subracks": {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "object",
                  "propertyNames": {
                    "$comment": "Slug used to construct server name, k8s pods, etc",
                    "format": "hostname"
                  },
                  "additionalProperties": {
                    "oneOf": [
                      {
                        "type": "null"
                      },
                      {
                        "type": "object",
                        "properties": {
                          "srmb_host": {
                            "type": "string",
                            "format": "hostname"
                          },
                          "srmb_port": {
                            "type": "integer",
                            "minimum": 1
                          }
                        },
                        "required": [
                          "srmb_host",
                          "srmb_port"
                        ],
                        "additionalProperties": false
                      }
                    ]
                  }
                }
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "ska-tango-devices": {
      "type": "object",
      "properties": {
        "deviceDefaults": {
          "type": "object",
          "properties": {
            "MccsTile": {
              "type": "object"
            },
            "MccsDaqReceiver": {
              "type": "object"
            },
            "MccsSubrack": {
              "type": "object"
            },
            "SpsStation": {
              "type": "object"
            },
            "MccsPdu": {
              "type": "object"
            },
            "PowerMarshaller": {
              "type": "object"
            }
          },
          "additionalProperties": false
        },
        "devices": {
          "type": "object",
          "properties": {
            "MccsTile": {
              "type": "object"
            },
            "MccsDaqReceiver": {
              "type": "object"
            },
            "MccsSubrack": {
              "type": "object"
            },
            "SpsStation": {
              "type": "object"
            },
            "MccsPdu": {
              "type": "object"
            },
            "PowerMarshaller": {
              "type": "object"
            }
          },
          "additionalProperties": false
        }
      },
      "required": []
    }
  }
}