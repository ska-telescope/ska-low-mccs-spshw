{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://skao.int/MccsTile_SetCspDownload.json",
    "title": "MccsTile SetCspDownload schema",
    "description": "Schema for MccsTile's SetCspDownload command",
    "type": "object",
    "properties": {
        "src_port": {
            "description": "Source port fpr data streams",
            "type": "integer",
            "minimum": 0
        },
        "dst_ip_1": {
            "description": "Destination IP address FPGA1",
            "type": "string",
            "format": "ipv4"
        },
        "dst_ip_2": {
            "description": "Destination IP address FPGA2",
            "type": "string",
            "format": "ipv4"
        },
        "dst_port": {
            "description": "Destination port for data streams",
            "type": "integer",
            "minimum": 0
        },
        "is_last": {
            "type": "boolean",
            "description": "True for last tile in beamforming chain"
        },
        "netmask": {
            "description": "Integer netmask for the 40g (science data) subnet",
            "type": "string",
            "format": "ipv4"
        },
        "gateway": {
            "description": "Integer IP address of the 40g (science data) subnet gateway",
            "type": "string",
            "format": "ipv4"
        }
    },
    "required": [
        "src_port",
        "dst_ip_1",
        "dst_ip_2",
        "dst_port",
        "is_last",
        "netmask",
        "gateway"
    ],
    "additionalProperties": false
}