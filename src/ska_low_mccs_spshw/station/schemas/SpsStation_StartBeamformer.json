{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://skao.int/SpsStation_StartBeamformer.json",
    "title": "SpsStation StartBeamformer schema",
    "description": "Schema for SpsStation's StartBeamformer command",
    "type": "object",
    "properties": {
        "start_time": {
            "description": "",
            "oneOf": [
                {
                    "type": "string",
                    "format": "time"
                },
                {
                    "type": "null"
                }
            ]
        },
        "duration": {
            "description": "Duration in CSP frames (or -1 to run forever)",
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": -1
                },
                {
                    "type": "null"
                }
            ]
        },
        "channel_groups": {
            "description": "Channel groups to be started.",
            "type": "array",
           "items":  {
                "type": "integer",
               "minimum": 0,
               "maximum": 47
           },
            "minItems": 1,
           "maxItems": 48
        },
        "scan_id": {
            "description": "The unique ID for the started scan",
            "type": "integer",
            "minimum": 0
        }
    }
}
