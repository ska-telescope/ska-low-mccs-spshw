{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://skao.int/MccsTile_StartAcquisition.json",
    "title": "MccsTile StartAcquisition schema",
    "description": "Schema for MccsTile's StartAcquisition command",
    "type": "object",
    "properties": {
        "start_time": {
            "description": "ISO time for starting the ADC acquisition",
            "type": "string",
            "format": "time"
        },
	"global_sync_time": {
	    "description": "Reference time used for timestamp",
            "type": "string",
            "format": "time"
	},
        "delay": {
            "description": "An acquisition start delay",
            "type": "integer"
        }
    }
}
